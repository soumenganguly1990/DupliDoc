<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:paddingTop="190dp"
        android:layout_alignParentStart="true">

        <com.soumen.duplidoc.utils.HelveticaBoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="50sp"
            android:textStyle="bold"
            android:gravity="left"
            android:paddingLeft="35dp"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"
            android:text="Your smart storage saver, DupliDoc, helps you store more of your lovable memories, important documents and files by showing you their duplicates. So, remove them, save valuable storage and store more.."
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>